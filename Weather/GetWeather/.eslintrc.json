{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "browser": false,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      4,
      { "SwitchCase": 1 }
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "space-infix-ops": [
      2
    ],
    "keyword-spacing": [
      "error",
      { "before": true, "after": true, "overrides": {} }
    ],
    "space-before-function-paren": [
      2,
      { "named": "never", "anonymous": "always" }
    ],
    "no-spaced-func": [
      2
    ],
    "no-trailing-spaces": [
      2,
      { "skipBlankLines": true }
    ],
    "space-before-blocks": [
      2
    ],
    "curly": [
      2
    ],
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "complexity": [
      2
    ],
    "arrow-spacing": [
      2,
      { "before": true, "after": true }
    ],
    "no-duplicate-imports": [
      2
    ],
    "no-useless-constructor": [
      2
    ],
    "no-useless-rename": [
      2
    ],
    "no-var": [
      2
    ],
    "prefer-const": [
      2
    ],
    "no-console": "off"
  }
}